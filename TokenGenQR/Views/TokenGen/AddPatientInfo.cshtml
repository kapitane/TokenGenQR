@model QRCodeInASPNetCore.Models.UserInfoModel

@{
    ViewData["Title"] = "Index";
}

<h1>Patient Information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPatientInfo">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            @if(Model.PatientType == "old")
            {
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label"></label>
                    <input asp-for="GroupName" class="form-control" required />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Generate Token" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="PatientType"/>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
